{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "outputDirectory": ".next",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/wallet/(.*)",
      "dest": "/wallet/$1"
    },
    {
      "src": "/api/wallet/(.*)",
      "dest": "/api/wallet/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_WALLET_ENABLED": "true",
    "NEXT_PUBLIC_WALLET_PROVIDER": "metamask",
    "NEXT_PUBLIC_DEFAULT_CHAIN_ID": "1"
  }
} 